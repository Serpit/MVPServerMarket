<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.itaem.serpit.usercenter.ui.activity.RegisterActivity">

    <com.itaem.serpit.baselibrary.widgets.HeaderBar
        app:titleColor="@color/common_black"
        app:backgroundColor="@color/common_white"
        app:titleText="登陆"
        style="@style/MatchWrap"/>
    <LinearLayout
        android:layout_marginTop="132dp"
        android:padding="16dp"
        android:orientation="vertical"
        style="@style/MatchWrap">
        <android.support.v7.widget.CardView

            app:cardCornerRadius="16dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:orientation="horizontal"
                style="@style/MatchMatch">
                <ImageView
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/account_icon"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <EditText
                    android:hint="登陆账号"
                    android:id="@+id/mCount"
                    android:textSize="14sp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    style="@style/MatchWrap" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="15dp"
            app:cardCornerRadius="16dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:orientation="horizontal"
                style="@style/MatchMatch">
                <ImageView
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/pw_icon"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <EditText
                    android:hint="请输入密码"
                    android:id="@+id/mPwEt"
                    android:inputType="textPassword"
                    android:textSize="14sp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    style="@style/MatchWrap" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/mLoginBtn"
            android:textColor="@color/common_white"
            android:layout_marginTop="38dp"
            android:text="登陆"
            android:background="@drawable/btn_common_selector"
            style="@style/MatchWrap" />
        <RelativeLayout
            android:layout_marginTop="15dp"
            style="@style/MatchWrap">
            <TextView
                android:id="@+id/mRegisterTv"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/lightGreen"
                android:textSize="@dimen/text_middle_size"
                android:text="注册"
                style="@style/WrapWrap" />
            <TextView
                android:id="@+id/mForgetPwTv"
                android:layout_marginRight="20dp"
                android:textColor="@color/lightGreen"
                android:layout_alignParentRight="true"
                android:text="忘记密码"
                android:layout_gravity="end"
                style="@style/WrapWrap" />
        </RelativeLayout>
    </LinearLayout>




</LinearLayout>
