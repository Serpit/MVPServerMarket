<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.itaem.serpit.baselibrary.widgets.HeaderBar
        app:titleColor="@color/white"
        android:id="@+id/mHeaderBar"
        app:backgroundColor="@color/lightGreen"
        app:titleText="团购详情"
        app:rightText="完成"
        style="@style/MatchWrap"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:text="原价"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView

            android:textColor="@color/black"
            android:id="@+id/mOriginPriceTv"
            android:background="@null"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:text="15"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/lightGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:text="团购价 ￥"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="number"
            android:id="@+id/mGroupPriceEt"
            android:background="@null"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:hint="请输入团购价格"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/lightGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:text="份额"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="number"
            android:id="@+id/mLimitEt"
            android:background="@null"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:hint="请输入团购份额"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/lightGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:text="结束时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:text="2018-8-8 10:50:45"
            android:id="@+id/mEndTimeTv"
            android:background="@null"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:hint="请输入店铺名称"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/lightGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>







</LinearLayout>
