<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.itaem.serpit.baselibrary.widgets.HeaderBar
        app:titleColor="@color/common_black"
        app:backgroundColor="@color/common_white"
        app:titleText="修改个人收货信息"
        style="@style/MatchWrap"/>
    <LinearLayout
        android:layout_marginTop="70dp"
        android:padding="16dp"
        android:orientation="vertical"
        style="@style/MatchWrap">
        <android.support.v7.widget.CardView
            app:cardCornerRadius="16dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:orientation="horizontal"
                style="@style/MatchMatch">
                <ImageView
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/account_icon"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <EditText
                    android:inputType="text"
                    android:hint="收货人"
                    android:id="@+id/mUserEt"
                    android:textSize="14sp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    style="@style/MatchWrap" />
            </LinearLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_marginTop="15dp"
            app:cardCornerRadius="16dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:orientation="horizontal"
                style="@style/MatchMatch">
                <ImageView
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/vertifycode_icon"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <EditText

                    android:id="@+id/mAddressEt"
                    android:inputType="text"
                    android:textSize="14sp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="地址"
                    style="@style/MatchWrap" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginTop="15dp"
            app:cardCornerRadius="16dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:orientation="horizontal"
                style="@style/MatchMatch">
                <ImageView
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/vertifycode_icon"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <EditText

                    android:id="@+id/mPhoneEt"
                    android:inputType="phone"
                    android:textSize="14sp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="电话号码"
                    style="@style/MatchWrap" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <Button
            android:id="@+id/mConfirmBt"
            android:textColor="@color/common_white"
            android:layout_marginTop="38dp"
            android:text="确定"
            android:background="@drawable/btn_common_selector"
            style="@style/MatchWrap" />
    </LinearLayout>




</LinearLayout>
