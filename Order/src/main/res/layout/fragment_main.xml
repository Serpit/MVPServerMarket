<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.Toolbar
        android:background="@color/lightGreen"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:contentInsetStart="0dp">
        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout

                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="16dp">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@mipmap/location"
                    android:layout_width="14dp"
                    android:layout_height="16dp" />
                <TextView
                    android:id="@+id/mLocationTv"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="22dp"
                    android:text="暂无数据"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView

                    android:id="@+id/mIIv"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/head"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
            </RelativeLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="光明集市"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                android:id="@+id/mSearchCv"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="330dp"
                android:layout_height="34dp"

                app:cardCornerRadius="15dp">
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@mipmap/search"
                        android:layout_gravity="center_vertical"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginRight="8dp"/>
                    <TextView
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:text="搜索商家、商品名称"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <GridLayout
        android:id="@+id/mSortGL"
        android:rowCount="2"
        android:columnCount="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/oilSort"
                android:layout_gravity="center"
                android:src="@mipmap/oil"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:text="粮油"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/vSort"
                android:layout_gravity="center"
                android:src="@mipmap/vegetable"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:text="蔬菜"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/wSort"
                android:layout_gravity="center"
                android:src="@mipmap/seafood"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:text="水产"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/eSort"
                android:layout_gravity="center"
                android:src="@mipmap/egg"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:text="禽蛋"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/fSort"
                android:layout_gravity="center"
                android:src="@mipmap/spices"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:text="调料"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/cooked_food"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:text="熟食"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/fruits"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:text="瓜果"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/meat"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:text="肉类"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </GridLayout>
    <View
        android:background="@color/lightGray"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="推荐店铺"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/mShopListRv"
            app:layoutManager="LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>