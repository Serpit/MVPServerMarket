<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/mShopLogoIv"
        android:src="@mipmap/good_default"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <LinearLayout

        android:layout_toRightOf="@+id/mShopLogoIv"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/mGoodNameTv"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="两个鸡蛋 半只鸡"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/mEndTimeTv"
                android:textColor="@color/gray"
                android:text="距结束剩:20小时"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:text="只差"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/mSurplusTv"
                    android:textColor="@color/red"
                    android:text="20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="人"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:background="@drawable/join_team_background"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/mCurrentPriceTv"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                android:text="￥27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView

                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/mCurrentPriceTv"
                android:id="@+id/mOriginPriceTv"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="7dp"
                android:textSize="12dp"
                android:text="￥40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/mJoinBt"
                android:textColor="@color/white"
                android:background="@drawable/join_team_button_bg"
                android:layout_alignParentRight="true"
                android:text="去参团"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_alignParentBottom="true"
        android:background="@color/lightGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>