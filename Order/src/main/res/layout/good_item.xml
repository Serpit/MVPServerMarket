<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"

    android:layout_height="81dp">
    <ImageView
        android:id="@+id/mGoodIv"
        android:src="@mipmap/good_default"
        android:layout_width="60dp"
        android:layout_height="61dp" />

    <LinearLayout
        android:layout_marginLeft="70dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="67dp">
        <TextView
            android:id="@+id/mGoodNameTv"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="商品"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mNumTv"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"
                android:text="余量10000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/mPriceTv"
            android:textColor="@color/red"
            android:textSize="12dp"
            android:text="￥10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <com.itaem.serpit.baselibrary.widgets.IncreaseAndReduceView
        android:id="@+id/increaseSubView"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>

    <View
        android:background="@color/lightGray"

        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>