<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl"
    >

    <LinearLayout
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/lightGreen"
            android:text="亲，请先登陆"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/lightGreen"
            android:text="（点击即可登陆）"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
        <!--ToolBar-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#2dae99">
            <!--图片直接设置 宽高？-->
            <android.support.v7.widget.Toolbar

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2dae99"
                android:orientation="vertical">

                <ImageView

                    android:id="@+id/mExitIv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/exit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="代购信息"
                    android:textColor="#fff"
                    android:textSize="20dp" />
            </android.support.v7.widget.Toolbar>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">


                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/User"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/cat"
                    android:layout_marginLeft="20dp"
                    app:riv_corner_radius="30dp"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/mUserNameTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"

                            android:layout_marginLeft="10dp"
                            android:textColor="#fff" />
                        <ImageView
                            android:id="@+id/mSexIv"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/male"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/mPhoneTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="136****9818"
                        android:textColor="#fff"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp" />
                </LinearLayout>




            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            style="@style/MatchWrap">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bbbbba"
                />
            <LinearLayout
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/mShowHelpBuyReqLL"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/req" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看代购请求"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bbbbba" />
            <LinearLayout
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/mEvaluationLL"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/evaluation" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评价"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bbbbba"
                />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
